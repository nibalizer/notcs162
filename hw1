    float balance;
    string account_Holder;
    string mailing_address;
    string phone-number;
};

bankaccount myaccount;


bankaccount myaccounts[100];


int i = 0;
for(i =0; i<100; i++){
    cout << myaccounts[i].balance << endl;
}
 

